<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    tools:context=".Startups.CompanyCreation.CreateCompanyNameActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/createCompanyLogoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:title="New Company"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/signup_activity_back">
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:id="@+id/createCompanyAddressDescription"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Company Logo"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="300dp"
            android:background="@color/light_gray"
            android:id="@+id/createCompanyLogoImage"></ImageView>
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/logoPhotoButton"

            android:layout_below="@id/createCompanyLogoImage"></ImageButton>
        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/removePhotoButton"
            android:layout_below="@+id/createCompanyLogoImage"
            android:text="Remove Photo"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"></View>

    <Button

        android:id="@+id/createCompanyLogoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_gradient"
        android:text="Confirm"
        android:layout_marginTop="50dp"
        android:textSize="15sp"></Button>

</LinearLayout>
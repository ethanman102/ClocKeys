<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.ProfileFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileEmployeeImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/addison_rae"
                android:layout_gravity="center"
                app:civ_border_color="@color/white"
                android:layout_marginTop="20dp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/profileEmployeeName"
                android:text="Employee Name"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/profileEmployeeHometown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Employee Hometown"
                android:layout_gravity="center"></TextView>

            <TextView
                android:id="@+id/profileEmployeeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Employee ID"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                ></TextView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="225dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            </TextView>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</RelativeLayout>
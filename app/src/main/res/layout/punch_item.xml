<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_marginHorizontal="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/punchItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="4dp"
        app:cardBackgroundColor="@color/teal_700"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_background"
                android:scaleType="centerCrop"></ImageView>

        <RelativeLayout
            android:id="@+id/punchRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            >

            <TextView
                android:id="@+id/punchDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punch Date"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/punchDateIcon"
                android:layout_marginStart="5dp">

            </TextView>

            <ImageView
                android:id="@+id/punchDateIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/employee_hire_vectotr"
                android:layout_marginStart="20dp"
                app:tint="@color/white">

            </ImageView>

            <TextView
                android:id="@+id/punchTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00am - 5:00pm"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:layout_alignParentRight="true"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/punchHoursWorked"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:text="10 Hours"
                android:layout_below="@+id/punchTimeText"
                android:layout_marginEnd="20dp"></TextView>

        </RelativeLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>